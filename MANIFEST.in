# Include important files in the package distribution
include README.md
include LICENSE
include requirements.txt
include demo_inference.py

# Include all Python files
recursive-include retrobert *.py

# Include demo data (small subset)
recursive-include dataset/demo *.csv
include dataset/demo/AVATAR_SDSBD_demo.xlsx

# Include pre-trained models for demo
recursive-include outputs/trained *.pth.tar

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
